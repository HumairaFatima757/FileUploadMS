<script>
async function loadHistory() {
  const tbody = document.querySelector("table tbody");
  try {
    const res = await fetch("/myuploads");
    if (!res.ok) throw new Error("Failed to fetch uploads!");

    const files = await res.json();

    if (files.length === 0) {
      tbody.innerHTML = `<tr><td colspan="5" class="px-6 py-4 text-center text-gray-400">No uploads yet</td></tr>`;
      return;
    }

    tbody.innerHTML = files.map(file => `
      <tr class="bg-white border-b hover:bg-gray-50">
        <td class="px-6 py-4 break-words whitespace-normal max-w-[250px] text-right" title="${file.filename}">
          ${file.filename}
        </td>
        <td class="px-6 py-4 text-right">${new Date(file.uploadedAt).toLocaleString()}</td>
        <td class="px-6 py-4 text-right">
          <a href="/uploads/${file.filename}" target="_blank" class="text-blue-600 hover:underline">View</a>
        </td>
        <td class="px-6 py-4 text-right">
          <a href="/delete/${file._id}" class="text-blue-600 hover:underline" onclick="return confirm('Are you sure you want to delete this file?')">Delete</a>
        </td>
        <td class="px-6 py-4 text-right">
          <a href="/uploads/${file.filename}" download="${file.filename}" class="text-blue-600 hover:underline">Download</a>
        </td>
      </tr>
    `).join('');
  } catch (error) {
    console.log(error);
    tbody.innerHTML = `<tr><td colspan="5" class="px-6 py-4 text-center text-red-500">Error loading uploads</td></tr>`;
  }
}

document.addEventListener("DOMContentLoaded", loadHistory);
</script>




  
